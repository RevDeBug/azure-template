{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name for the container group"
      },
      "defaultValue": "RevDeBugContainerGroup"
    },
    "containerName": {
      "type": "string",
      "metadata": {
        "description": "Name for the RevDeBug container "
      },
      "defaultValue": "rdb-server-container"
    },
    "volumeName": {
      "type": "string",
      "metadata": {
        "description": "Name for the recordings repository volume"
      },
      "defaultValue": "recordings"
    },
    "cpuCores": {
      "type": "string",
      "metadata": {
        "description": "The number of CPU cores to allocate to the container."
      },
      "defaultValue": "1.0"
    },
    "memoryInGb": {
      "type": "string",
      "metadata": {
        "description": "The amount of memory to allocate to the container in gigabytes."
      },
      "defaultValue": "1.5"
    },
    "organizationId": {
      "type": "string",
      "metadata": {
        "description": "RevDeBug organization ID."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
        "APIversion": "2018-04-01",
        "ports": [
                {
                  "protocol": "tcp",
                  "port": 42733
                },
                {
                  "protocol": "tcp",
                  "port": 42734
                }
              ]
  },
  "resources": [
    {
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "[variables('APIversion')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "command": [],
              "image": "docker.revdebug.com/server",
              "ports": "[variables('ports')]",
              "environmentVariables": [
                {
                  "name": "RECORDING_MODE",
                  "value": 3
                },
                {
                  "name": "REVDEBUG_AUTH",
                  "value": "[parameters('organizationId')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('cpuCores')]",
                  "memoryInGb": "[parameters('memoryInGb')]"
                }
              },
              "volumeMounts": [
                {
                  "name": "[parameters('volumeName')]",
                  "mountPath": "/app/RevDeBug",
                  "readOnly": false
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": "[variables('ports')]"
        },
        "volumes": [
          {
            "name": "[parameters('volumeName')]",
            "emptyDir": {}
          }
        ]
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    }
  }
}