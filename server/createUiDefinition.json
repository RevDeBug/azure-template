{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "organizationId",
                "type": "Microsoft.Common.TextBox",
                "label": "Organization ID",
                "toolTip": "RevDeBug organization ID",
                "constraints": {
                    "required": true,
                    "regex": "^[a-zA-Z0-9]{3,63}$",
                    "validationMessage": "The organization id must be between 3 and 63 characters long and contain letters and numbers only."
                }
            },
            {
                "name": "containerGroupName",
                "type": "Microsoft.Common.TextBox",
                "label": "Container group name",
                "toolTip": "The name of the container group.",
                "defaultValue": "RevDeBugContainerGroup",
                "constraints": {
                    "required": true,
                    "regex": "^[-a-zA-Z0-9\\s]{1,63}$",
                    "validationMessage": "The container group name must be between 1 and 63 characters long."
                }
            },
            {
                "name": "containerName",
                "type": "Microsoft.Common.TextBox",
                "label": "Container name",
                "toolTip": "The name of the container.",
                "defaultValue": "rdb-server-container",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9]([-a-z0-9]{1,61}[a-z0-9])$",
                    "validationMessage": "The container name must be between 3 and 63 characters long and contain letters, numbers and hyphens only."
                }
            },
            {
                "name": "cpuCores",
                "type": "Microsoft.Common.TextBox",
                "label": "Cpu cores",
                "toolTip": "The number of CPU cores to allocate to the container.",
                "defaultValue": "1",
                "constraints": {
                    "required": true,
                    "regex": "^[1-4]$",
                    "validationMessage": "Enter between 1 and 4 cpu cores."
                }
            },
            {
                "name": "memoryInGb",
                "type": "Microsoft.Common.TextBox",
                "label": "Memory in Gb",
                "toolTip": "The amount of memory to allocate to the container in gigabytes.",
                "defaultValue": "1.5",
                "constraints": {
                    "required": true,
                    "regex": "^[0-9]+(\\.[0-9]+)?$",
                    "validationMessage": "Enter a valid memory size."
                }
            }
        ],
        "steps": [],
        "outputs": {
            "location": "[location()]",
            "organizationId": "[basics('organizationId')]",
            "containerGroupName": "[basics('containerGroupName')]",
            "containerName": "[basics('containerName')]",
            "cpuCores": "[basics('cpuCores')]",
            "memoryInGb": "[basics('memoryInGb')]"
        }
    }
}
